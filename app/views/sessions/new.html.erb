<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-md">
    
    <% if flash[:alert] %>
      <div class="mb-4 bg-red-100 text-red-700 px-4 py-3 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="mb-4 bg-green-100 text-green-700 px-4 py-3 rounded">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <h2 class="text-center text-2xl font-extrabold text-gray-900 mb-6">
      Sign in to your account
    </h2>

    <%= form_with url: session_url, class: "space-y-6", local: true do |form| %>
      <div>
        <%= form.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email,
          required: true,
          autofocus: true,
          autocomplete: "username",
          value: params[:email],
          placeholder: "you@example.com",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password,
          required: true,
          autocomplete: "current-password",
          maxlength: 72,
          placeholder: "••••••••",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm">
          <%= link_to "Forgot password?", new_password_path, class: "font-medium text-blue-600 hover:text-blue-500 underline" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in",
          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 font-medium" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      Don't have an account?
      <%= link_to "Sign up", new_user_path, class: "text-blue-600 font-semibold underline hover:text-blue-800" %>
    </p>
  </div>
</div>