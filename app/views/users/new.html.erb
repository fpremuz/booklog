<div class="min-h-screen flex items-start justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-center mb-6">Create an Account</h1>

    <% if @user.errors.any? %>
      <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
<% if @user.errors.any? %>
  <div class="bg-red-100 text-red-800 p-4 mb-4 rounded">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <%= form_with model: @user, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :email, class: "block text-gray-700 font-medium" %>
        <%= form.email_field :email, class: "w-full mt-1 p-2 border rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
        <% if form.object.errors[:email].any? %>
          <div class="text-red-500 text-xs mt-1">
            <%= form.object.errors[:email].first %>
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :password, class: "block text-gray-700 font-medium" %>
        <%= form.password_field :password, class: "w-full mt-1 p-2 border rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
        <% if form.object.errors[:password].any? %>
          <div class="text-red-500 text-xs mt-1">
            <%= form.object.errors[:password].first %>
          </div>
        <% end %>
      </div>

      <div class="mb-6">
        <%= form.label :password_confirmation, class: "block text-gray-700 font-medium" %>
        <%= form.password_field :password_confirmation, class: "w-full mt-1 p-2 border rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
        <% if form.object.errors[:password_confirmation].any? %>
          <div class="text-red-500 text-xs mt-1">
            <%= form.object.errors[:password_confirmation].first %>
          </div>
        <% end %>
      </div>

      <%= form.submit "Sign up", class: "w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700 transition" %>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Sign in", new_session_path, class: "text-blue-600 font-semibold underline hover:text-blue-800" %>
    </p>
  </div>
</div>