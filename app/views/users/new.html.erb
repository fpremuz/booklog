<div class="max-w-md mx-auto mt-12 bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold text-center mb-6">Create an Account</h1>

  <%= form_with model: @user, local: true do |form| %>
    <% if @user.errors.any? %>
      <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700 font-medium" %>
      <%= form.email_field :email, class: "w-full mt-1 p-2 border rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :password, class: "block text-gray-700 font-medium" %>
      <%= form.password_field :password, class: "w-full mt-1 p-2 border rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
    </div>

    <div class="mb-6">
      <%= form.label :password_confirmation, class: "block text-gray-700 font-medium" %>
      <%= form.password_field :password_confirmation, class: "w-full mt-1 p-2 border rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
    </div>

    <%= form.submit "Sign up", class: "w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700 transition" %>
  <% end %>
</div>