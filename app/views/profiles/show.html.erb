<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg mt-8">
  <h1 class="text-4xl font-semibold text-gray-800 mb-4">
    <%= @user.username %>'s Bookshelf
  </h1>

  <div class="flex items-center justify-between mb-6">
    <div class="text-lg text-gray-600">
      <p>Email: <span class="font-medium text-gray-800"><%= @user.email %></span></p>
      <p>Joined: <span class="font-medium text-gray-800"><%= @user.created_at.strftime("%B %d, %Y") %></span></p>
    </div>
    <div>
      <%= link_to 'Edit Profile', edit_profile_path(@user.username), class: "btn btn-primary bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg" %>
      <%= link_to 'Share this Profile', share_profile_path(@user.username), class: "btn btn-secondary bg-green-500 hover:bg-green-600 text-white py-2 px-4 ml-4 rounded-lg" %>
    </div>
  </div>

  <% if @user.books.any? %>
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Books</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @user.books.each do |book| %>
        <div class="bg-gray-100 p-4 rounded-lg shadow-sm hover:shadow-md transition duration-200">
          <h3 class="font-semibold text-lg text-gray-800"><%= book.title %></h3>
          <p class="text-sm text-gray-600">By <%= book.author %></p>
          <p class="text-xs text-gray-500 mt-2"><%= book.description.truncate(100) %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-lg text-gray-600 mt-4">No books added yet.</p>
  <% end %>
</div>