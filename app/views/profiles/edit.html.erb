<div class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-lg mt-8">
  <h1 class="text-4xl font-semibold text-gray-800 mb-6">Edit Your Profile</h1>

  <%= form_for @user, url: profile_path(@user.username), method: :patch, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :username, class: "block text-lg text-gray-700" %>
      <%= f.text_field :username, class: "mt-1 p-3 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-lg text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 p-3 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-lg text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 p-3 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <p class="text-sm text-gray-500">Leave empty if you don't want to change your password</p>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-lg text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "mt-1 p-3 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Save Changes", class: "bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>